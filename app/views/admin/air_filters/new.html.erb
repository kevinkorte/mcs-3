<div class="container">
  
  <div class="page-header">
    <h1>New Air Filter</h1>
  </div>

  <%= simple_form_for @airfilter, url: admin_air_filters_path, html: {class: 'form-horizontal' } do |f| %>
    <%= f.error_notification %>
    <div class="col-md-6">
      <div class="form-inputs">
        <%= f.input :brand %>
      </div>
      <div class="form-inputs">
        <%= f.input :part_number %>
      </div>
      <%= f.submit :class => 'btn btn-lg btn-block btn-success' %>
    </div>
    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">(<%=@list_all_af.count%>) Air Filters</div>
          <ul class="list-group">
          <% @list_all_af.each do |airfilter| %>
            <li class="list-group-item">
              <p><strong><%= airfilter.brand %></strong></p>
              <p class="lead"><%= airfilter.part_number %></p>
            </li>
          <% end %>
          </ul>
          <%= will_paginate @list_all_af %>
        </div>
      </div>
      
  
  <% end %>

</div>